<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Petty.Views.DiagnosticPettyPage"
             x:DataType="viewModels:DiagnosticPettyViewModel"
             xmlns:viewModels="clr-namespace:Petty.ViewModels"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="PettyTestPage"
             Style="{StaticResource PageBaseStyle}">
    
    <VerticalStackLayout>
        <Label 
            Text="{Binding Speech}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Clear" Command="{Binding ClearSpeechCommand}"/>
        <Button Text="StartStop" Command="{Binding StartStopPettyGuardAndroidServiceCommand}"/>
    </VerticalStackLayout>
</ContentPage>